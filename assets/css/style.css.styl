/*
 * Store Variables
 */

html,
body
   width 100%
   height 100%
/* ==========================================================================
   Header
   ========================================================================== */
   .page-content
      width 100%
      height 100%
      background-color white
      
      .main-logo
         // width 39.68%
         width 100%
         display inline-block
         position absolute
         margin auto
         left 0
         right 0
         top 8.4%
         .icon-box
            // width 43.16%
            width 30.53vh
            height 30.53vh
            margin auto
            .logo-icon
               width 100%
         .logo-name
            // width 100%
            height 8.54vh
            margin auto
            left 0
            right 0 
            display block
      .three-v-line
         font-family OpenSans-Light
         // font-size 1.25vw
         font-size 2.4vh
         width 100%
         text-align center
         position absolute
         top 51%
         color #D5D9E1
         letter-spacing 10px
         font-weight lighter
      .coming-line
         font-family OpenSans-Light
         // font-size 1.4vw
         font-size 2.8vh
         width 100%
         text-align center
         position absolute
         top 70%
         color #6F7375
         letter-spacing 9px
         font-weight lighter
      p
         font-family OpenSans-Light
         // font-size 0.83vw
         font-size 1.6vh
         width 100%
         text-align center
         position absolute
         top 81.1%
         color #6F7375
         letter-spacing 5px
         font-weight lighter
      form
         .field-wrapper
            width 29.1vw
            height 2.77vw
            position absolute
            position absolute
            margin auto
            left 0
            right 0
            top 85.1%
         input
            width 29.1vw
            // height 2.77vw
            height 5.3vh    
            border 1px solid #D5D9E1
            position relative
            margin auto
            left 0
            right 0
            top 0
            font-family OpenSans-Light
            // font-size 1.25vw
            font-size 2.4vh
            letter-spacing 0px
            text-align left
            color #EAECF0
            &::-webkit-input-placeholder
               color #EAECF0
               text-align center
               letter-spacing 5px
            &:-moz-placeholder
               color #EAECF0
               text-align center
               letter-spacing 5px
            &::-moz-placeholder
               color #EAECF0
               text-align center 
               letter-spacing 5px 
            &:-ms-input-placeholder
               color #EAECF0
               text-align center
               letter-spacing 5px
            &:focus
               border-color #56B0FF
               color #56B0FF
               outline none
               &::-webkit-input-placeholder
                  color #56B0FF
               &:-moz-placeholder
                  color #56B0FF
               &::-moz-placeholder
                  color #56B0FF 
               &:-ms-input-placeholder
                  color #56B0FF
         .field-error
            border-color #FF5A7A !important
            color #FF5A7A !important
         .field-success
            border-color #34D290 !important
            color #34D290 !important
         #status-circle
            width 1.94vw
            height 1.94vw
            background-image url("/img/Submit_btn@2x.png")
            background-repeat no-repeat
            background-size contain
            position absolute
            top 15%
            right 2%
            opacity 0
            bottom 0
            margin auto
         .status-circle-error
            background-image url("/img/Error_btn@2x.png") !important
            opacity 1 !important
         .status-circle-success 
            background-image url("/img/Success_btn@2x.png") !important
            opacity 1 !important
      #email-status
         position absolute
         top 92%  
            
      .left-crystal
         width 26.5%
         position absolute
         left 0 
         bottom 0
      .right-crystal
         width 26.5%
         position absolute
         right 0 
         bottom 0
         